{
  "name": "zkc-by-example",
  "version": "0.0.1",
  "private": true,
  "license": "ISC",
  "author": "zkcrossteam",
  "description": "zkc tutorial examples",
  "dependencies": {
    "parcel": "^2.10.1",
    "react": "^18.2.0",
    "react-dice-complete": "^2.2.0",
    "react-dom": "^18.2.0",
    "zkc-sdk": "0.1.1-alpha"
  },
  "devDependencies": {
    "@types/node": "^20.8.9",
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "eslint": "^8.52.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "get-git-folder": "^0.1.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "process": "^0.11.10",
    "typescript": "~5.2.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.{html,md,less,css,json,yml,js,ts,tsx}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "scripts": {
    "prepack": "husky install",
    "test": "lint-staged",
    "pack": "parcel build --no-source-maps ./src/examples/dice-game/index.html --public-url .",
    "build": "npm run clean  && npm run pack",
    "clean": "rm -rf .parcel-cache/ dist/",
    "dice-game": "cd ./examples/dice-game && npm run clean && parcel ./index.html",
    "hello-world": "cd ./examples/hello-world && npm run clean && parcel ./index.html",
    "zk-hello-world": "cd ./examples/zk-hello-world && npm run clean && parcel ./index.html"
  }
}